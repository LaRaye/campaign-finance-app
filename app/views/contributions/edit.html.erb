<h3>Make Changes to This Contribution Below</h3>

<%= form_for @contribution do |f| %>
  <%= f.label :contributor_name, "Contributor Name" %>
  <%= f.text_field :contributor_name %><br><br>

  <%= f.label :candidate_name, "Candidate Name" %>
  <%= f.text_field :candidate_name %><br><br>

  <%= f.label :amount %>
  <%= f.text_field :amount %><br><br>

  <%= f.label :date %>
  <%= f.text_field :date %><br><br>

  <%= f.submit 'Edit Contribution' %>
<% end %>
